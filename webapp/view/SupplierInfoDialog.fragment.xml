<core:FragmentDefinition
	xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog title="{i18n>SupplierInfo}">
    <l:Grid defaultSpan = "L12 M12 S12" width = "auto" id = "idGrid">
    <l:content>
        <f:SimpleForm id="SimpleFormDisplay354"
            minWidth="1024"
            maxContainerCols="2"
            editable="false"
            layout="ResponsiveGridLayout"
            labelSpanL="3"
            labelSpanM="3"
            emptySpanL="4"
            emptySpanM="4"
            columnsL="2"
            columnsM="2">
            <f:content>
             
                <Label text="{i18n>CompanyName}" />
                <Text text = "{SupplierInfoModel>/CompanyName}"/>
             
                <Label text="{i18n>Address}" />
                <Text text = "{SupplierInfoModel>/Address}, {SupplierInfoModel>/City} ({SupplierInfoModel>/Country})"/>
             
                <Label text="{i18n>Contact}" />
                <Text text = "{SupplierInfoModel>/ContactName}, {SupplierInfoModel>/ContactTitle}"/>
             
                <Label text="{i18n>Phone}" />
                <Text text = "{SupplierInfoModel>/Phone}"/>
            </f:content>
        </f:SimpleForm>
    </l:content>
    </l:Grid>
    <buttons>
    <Button text = "{i18n>Close}" press = "closeDialog" type = "Reject"/>
    </buttons>
</Dialog >
</core:FragmentDefinition>